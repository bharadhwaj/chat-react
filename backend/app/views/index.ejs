<%- include layouts/header.ejs %>
<!-- for drawing click on this <a href="/room/draw">link</a> -->

	<div class="jumbotron">
        <div class="container">
    		<div class="row">
                <h1 class="title">Pictionary</h1>
            </div>
        </div>
        <div class="row">
			<button type="button" class="btn btn-primary " data-toggle="modal" data-target="#joinRoom">
			  Join a Room
			</button>
			<button type="button" class="btn btn-primary " data-toggle="modal" data-target="#createRoom">
			  Create a Room
			</button>
		</div>
        <a href="https://github.com/melvin0008/Pictionary"><img style="position: absolute; top:0; right:0; border:0;"src="/img/github.png" alt="Fork me"></a>
	</div>
<div class="modal fade" id="joinRoom">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Join a Room</h4>
            </div>
            <div class="modal-body">
            	<form>
		          <div class="form-group">
		            <label for="username" class="control-label">Enter Username:</label>
		            <input type="text" class="form-control" id="username">
		          </div>

		          <div class="form-group">
		            <label for="roomname" class="control-label">Enter RoomName to Join</label>
		            <input type="text" class="form-control" id="roomname">
		          </div>
		        </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            	<button type="button" class="btn btn-primary" onclick="joinroom()">Join</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="createRoom">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Create a Room</h4>
            </div>
            <div class="modal-body">
            	<form>
		          <div class="form-group">
		            <label for="username" class="control-label">Enter Username:</label>
		            <input type="text" class="form-control" id="cusername">
		          </div>
                    <div class="form-group">
                    <label for="roomname" class="control-label">Enter name of the room to be created</label>
                    <input type="text" class="form-control" id="croomname">
                  </div>
		        </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            	<button type="button" class="btn btn-primary" onclick="createroom()">Create</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="error">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Error</h4>
            </div>
            <div class="modal-body">
            	<label id="errorstring"></label>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/client.js"></script>

